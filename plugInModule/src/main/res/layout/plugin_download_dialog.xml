<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <LinearLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/plugin_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:paddingTop="20dp"
                android:text="@string/tips_new_version"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:src="@mipmap/plugin_update_close" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.jzb.pluginmoudle.main.widget.ProgressView
                android:id="@+id/progressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/0"
                android:visibility="visible"
                android:gravity="center"
                android:textColor="#7ec059"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:lineSpacingExtra="2dp"
            android:maxLines="5"
            android:paddingLeft="22dp"
            android:paddingTop="22dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="#444444"
            android:textSize="12dp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:id="@+id/linear_button1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/plugin_dialog_item_bg_selector_white_left_bottom"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/btn_cancel_update"
                android:textColor="#7ec059"
                android:textSize="16dp" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/tv_btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/plugin_dialog_item_bg_selector_white_right_bottom"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/btn_update_now"
                android:textColor="#7ec059"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_button2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_stop_install"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/plugin_dialog_item_bg_selector_white_left_right_bottom"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/btn_stop_update"
                android:textColor="#7ec059"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>