<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/out_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#33000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="呼叫 测试人员"
            android:textColor="@color/content_color"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_call_audio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_item_bg">

        <ImageView
            android:id="@+id/iv_call_audio"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/call_audio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_call_audio"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="语音通话"
            android:textColor="@color/normal"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_call_audio"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="免费通话"
            android:textColor="#00B06A"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_color" />

    <RelativeLayout
        android:id="@+id/btn_call_video"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_item_bg">

        <ImageView
            android:id="@+id/iv_call_video"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/call_video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_call_video"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="视频通话"
            android:textColor="@color/normal"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_call_video"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="安全加密"
            android:textColor="@color/content_color"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_color" />

    <RelativeLayout
        android:id="@+id/btn_call_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_item_bg">

        <ImageView
            android:id="@+id/iv_call_phone"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/call_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/iv_call_phone"
            android:gravity="center"
            android:text="普通电话"
            android:textColor="@color/normal"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/view_line_color" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_color"/>
</LinearLayout>