<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linear_call"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/tab_item_bg">

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <com.jzb.jzbcallhistory.widget.RoundCornerImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_image_bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="测试用户"
                android:textColor="#333333"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/iv_left_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/call_record_arrow_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="7dp"
                android:scaleY="-1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/iv_left_arrow"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="[普通电话] 11月22日 "
                android:textColor="@color/content_color"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/call_record_arrow_gray"
                android:layout_toRightOf="@+id/tv_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:padding="17dp"
        android:src="@mipmap/history_detail" />
</RelativeLayout>